{
  "name": "electron-ground-station",
  "version": "1.0.0",
  "description": "Web Ground Station Application",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --inspect",
    "build": "electron-builder",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "dist:mac": "electron-builder --mac",
    "dist:linux": "electron-builder --linux",
    "test": "jest"
  },
  "author": {
    "name": "Ground Station Team",
    "email": "team@groundstation.local"
  },
  "license": "ISC",
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^24.6.3",
    "jest": "^29.5.0"
  },
  "dependencies": {
    "flv.js": "^1.6.2",
    "simple-peer": "^9.11.1",
    "ssh2": "^1.11.0",
    "ws": "^8.18.2",
    "xterm": "^5.1.0",
    "xterm-addon-fit": "^0.7.0"
  },
  "build": {
    "appId": "com.groundstation.electron",
    "productName": "electron-ground-station",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "maintainer": "Ground Station Team <team@groundstation.local>",
      "artifactName": "${name}-${version}.${ext}"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "src/assets/favicon.png",
      "artifactName": "${name}-${version}-setup.${ext}"
    }
  }
}
